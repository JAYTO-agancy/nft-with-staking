model NftRarity {
  id String @id @default(uuid())
  // <-- Main Fields -->

  rarityLevel   Int    @unique
  rarityName    String
  generated     Int    @default(0)
  limit         Int
  baseChance    Float // Начальный шанс в процентах
  currentChance Float // Текущий шанс после перерасчета

  // <--/ Main Fields /-->
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("nft_rarity")
}
